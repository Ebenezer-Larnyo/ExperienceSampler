<?xml version='1.0' encoding='utf-8'?>
<widget id="com.experiencesampler.exampleExperienceSamplerAndroid" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>ExperienceSampler</name>
    <description>
        An example of ExperienceSampler that includes all of ExperienceSampler's features to date.
    </description>
    <author email="experiencesamplerapp@gmail.com" href="http://www.experiencesampler.com">
        Sabrina Thai and Elizabeth Page-Gould
    </author>
    <content src="index.html" />
    <preference name="SplashScreen" value="screen" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <engine name="android" spec="~6.3.0" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <plugin name="de.appplant.cordova.plugin.local-notification" spec="~0.8.5" />
</widget>
